<p id="notice"><%= notice %></p>

<div class="card border-dark text-white bg-dark mb-3 h-100">
  <%= image_tag("#{@item.image_url}", class: "card-img-top") %>
  <div class="card-body">
      <h5 class="card-title"><%= @item.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">$ <%= @item.price %></h6>
      <p class="card-text"><%= @item.description %></p>
      <%= link_to 'Edit', edit_item_path(@item), class: "card-link" %>
      <%= link_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
  </div>
</div>

<%= link_to 'Back', items_path %>
