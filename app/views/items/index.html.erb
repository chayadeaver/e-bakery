<p id="notice"><%= notice %></p>

<div class="card-group">
  <div class="row">
  <% @items.each do |item| %>
  <div class="col pb-3">
    <div class="card border-dark text-white bg-dark mb-3 h-100" style="width: 18rem;">
      <%= image_tag("#{item.image_url}", class: "card-img-top mw-100 mh-100", style: "width: 350px; height: 275px;") %>
      <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted">$ <%= item.price %></h6>
          <p class="card-text"><%= item.description %></p>
          <%= link_to 'Show', item, class: "btn btn-outline-light" %>
          <%= link_to 'Edit', edit_item_path(item), class: "btn btn-outline-light" %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-light" %>
      </div>
    </div>
  </div>
    <% end %>
  </div>
</div>


<br>

